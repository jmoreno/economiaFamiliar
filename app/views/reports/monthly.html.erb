<div class="container-fluid">
	<div class="row">
  	<h1><%= @title %></h1>	
  </div>
	<div class="row">
  	<div class="col-sm-3">
	    <%= form_tag({controller: "reports", action: "monthly"}, method: "get", class: "form-control") do %>
		    <div class="form-group">
		    	<label for="analysisYear"><%= t ('.year_select_label') %></label>
		    	<%= select_tag(:year, options_for_select(@years, @yearSelected), :class => "form-control") %>
		    </div>
		    <%= submit_tag(t('.title_submit_button'), class: "btn btn-lg btn-primary btn-block") %>
	 	  <% end %>
 		</div>
 		<div class="col-sm-9">
 			<%= render "pivotTable" %>
 		</div>
  </div>
</div>