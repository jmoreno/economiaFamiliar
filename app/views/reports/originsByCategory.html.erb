<div class="container-fluid">
	<div class="row">
  	<h1><%= @title %></h1>	
  </div>
	<div class="row">
  	<div class="col-sm-4">
	    <%= form_tag({controller: "reports", action: "originsByCategory"}, method: "get") do %>
		    <div class="form-group">
		    	<label for="categories"><%= t '.categories_select_label' %></label>
		    	<%= select_tag(:category, options_from_collection_for_select(@categories, :id, :name, @categorySelected), :class => "form-control") %>
		    </div>
		    <div class="form-group">
		    	<label for="analysisYear"><%= t '.year_select_label' %></label>
		    	<%= select_tag(:year, options_for_select(@years, @yearSelected), :class => "form-control") %>
		    </div>
		    <%= submit_tag(t('.title_submit_button'), class: "btn btn-lg btn-primary btn-block") %>
	 	  <% end %>
 		</div>
 		<div class="col-sm-8">
 			<%= render "pivotTableCount" %>
	  </div>
  </div>
</div>