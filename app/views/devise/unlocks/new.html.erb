<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: {class: 'form-signin', method: :post }) do |f| %>

	<h2>Resend unlock instructions</h2>

  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, :class => 'form-control', placeholder: 'Email', autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Resend unlock instructions", class: "btn btn-lg btn-primary btn-block" %>
  </div>
  
  <%= render "devise/shared/links" %>

<% end %>